---
import GoogleButton from '../../../components/ca/GoogleButton.astro'
import AuthLayout from '../../../layouts/AuthLayout.astro'
---

<AuthLayout title='Signup'>
  <div class='flex min-h-full flex-col justify-center px-6 py-12 lg:px-8'>
    <div class='sm:mx-auto sm:w-full sm:max-w-sm'>
      <img
        class='mx-auto h-10 w-auto'
        src='/favicon.svg'
        alt='Holiday Tracker'
      />
      <h2
        class='mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900'
      >
        Registra't a Aparca Ya
      </h2>
    </div>

    <div class='mt-10 sm:mx-auto sm:w-full sm:max-w-sm'>
      <form class='space-y-6' action='/api/auth/signup' method='POST'>
        <div>
          <label
            for='email'
            class='block text-sm font-medium leading-6 text-gray-900'
            >Correu electr√≤nic</label
          >
          <div class='mt-2'>
            <input
              id='email'
              name='email'
              type='email'
              autocomplete='email'
              required
              class='block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'
            />
          </div>
        </div>

        <div>
          <div class='flex items-center justify-between'>
            <label
              for='password'
              class='block text-sm font-medium leading-6 text-gray-900'
              >Contrasenya</label
            >
          </div>
          <div class='mt-2'>
            <input
              id='password'
              name='password'
              type='password'
              autocomplete='new-password'
              onchange='form.confirm_password.pattern = this.value'
              required
              class='block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'
            />
          </div>
        </div>

        <div>
          <div class='flex items-center justify-between'>
            <label
              for='confirm_password'
              class='block text-sm font-medium leading-6 text-gray-900'
              >Confirma la contrasenya</label
            >
          </div>
          <div class='mt-2'>
            <input
              id='confirm_password'
              name='confirm_password'
              type='password'
              autocomplete='new-password'
              onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Please enter the same Password as above' : '');"
              oninput="this.setCustomValidity('');"
              required
              class='block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'
            />
          </div>
        </div>

        <div>
          <button
            type='submit'
            class='flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600'
            >Registra't</button
          >
        </div>
      </form>

      <GoogleButton />

      <p class='mt-10 text-center text-sm text-gray-500'>
        Ja tens un compte?
        <a
          href='/signin'
          class='font-semibold leading-6 text-indigo-600 hover:text-indigo-500'
          >Identifica't</a
        >
      </p>
    </div>
  </div>
</AuthLayout>